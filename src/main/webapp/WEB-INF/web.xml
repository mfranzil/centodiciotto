<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <description>The path where the user avatar images are stored.</description>
        <param-name>avatar-folder</param-name>
        <param-value>img/avatars</param-value>
    </context-param>
    <context-param>
        <description>The folder where the exported pdfs are stored.</description>
        <param-name>pdf-folder</param-name>
        <param-value>pdfs</param-value>
    </context-param>

    <!-- Filtri -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>it.unitn.web.centodiciotto.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/restricted/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <!-- Listener -->
    <listener>
        <description>ServletContextListener</description>
        <listener-class>it.unitn.web.centodiciotto.listeners.WebAppContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>Cookies</servlet-name>
        <jsp-file>/jsp/cookies.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cookies</servlet-name>
        <url-pattern>/cookies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Privacy</servlet-name>
        <jsp-file>/jsp/privacy.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Privacy</servlet-name>
        <url-pattern>/privacy</url-pattern>
    </servlet-mapping>

    <!-- Config aggiuntive e pagine di errore -->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>500</error-code>
        <location>/jsp/errors/500.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/jsp/errors/403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/errors/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/jsp/errors/405.jsp</location>
    </error-page>

    <!-- Blocco l'accesso diretto alle jsp -->
    <security-constraint>
        <display-name>JSP direct access block</display-name>
        <web-resource-collection>
            <web-resource-name>JSP</web-resource-name>
            <url-pattern>/jsp/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>No direct access</description>
        </auth-constraint>
    </security-constraint>
</web-app>
