<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>dburl</param-name>
        <param-value>jdbc:derby:C:\Users\matte\OneDrive\Universit√†\Didattica\ProgettoWeb\files\CentoDiciotto\sl.db</param-value>
    </context-param>
    <context-param>
        <description>The path where the user avatar images are stored.</description>
        <param-name>avatarsFolder</param-name>
        <param-value>images/avatars</param-value>
    </context-param>
    <context-param>
        <description>The folder where are stored the exported pdfs</description>
        <param-name>pdfFolder</param-name>
        <param-value>pdfs</param-value>
    </context-param>
    <context-param>
        <param-name>smtp-hostname</param-name>
        <param-value>smtp.gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>smtp-port</param-name>
        <param-value>465</param-value>
    </context-param>
    <context-param>
        <param-name>smtp-username</param-name>
        <param-value>rewqasdfcxz11@gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>smtp-password</param-name>
        <param-value>rewqasdfcxz112</param-value>
    </context-param>
    <!-- Filtri: mapping filtri-classi -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>it.unitn.web.centodiciotto.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/restricted/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <!-- Listener -->
    <listener>
        <description>ServletContextListener</description>
        <listener-class>it.unitn.web.centodiciotto.listeners.WebAppContextListener</listener-class>
    </listener>
    <!-- Servlet: mapping nome-classe -->
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ForgotPasswordPage</servlet-name>
        <jsp-file>/password_recovery.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>it.unitn.web.centodiciotto.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>it.unitn.web.centodiciotto.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>it.unitn.web.centodiciotto.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PDFServlet</servlet-name>
        <servlet-class>it.unitn.web.centodiciotto.servlets.PDFServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendEmailServlet</servlet-name>
        <servlet-class>it.unitn.web.centodiciotto.servlets.SendEmailServlet</servlet-class>
    </servlet>
    <!-- Mapping dei servlet (ovvero con che path accedo a quella JSP/servlet) -->
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPasswordPage</servlet-name>
        <url-pattern>/password_recovery</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login_handler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/restricted/logout_handler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/restricted/user_handler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PDFServlet</servlet-name>
        <url-pattern>/restricted/export2PDF</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendEmailServlet</servlet-name>
        <url-pattern>/restricted/send_mail_handler</url-pattern>
    </servlet-mapping>
    <!-- Devo ancora capire cosa sia sta roba -->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>500</error-code>
        <location>/500.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
</web-app>
