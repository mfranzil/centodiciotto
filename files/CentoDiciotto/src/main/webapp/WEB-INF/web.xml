    <servlet-mapping>
        <servlet-name>ExamsRequestSpecializedDoctor</servlet-name>
        <url-pattern>/restricted/specialized_doctor/exam_request</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExamsHistorySpecializedDoctor</servlet-name>
        <url-pattern>/restricted/specialized_doctor/exam_history</url-pattern>
