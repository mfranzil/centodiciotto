<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <description>The path where the user avatar images are stored.</description>
        <param-name>avatarsFolder</param-name>
        <param-value>img/avatars</param-value>
    </context-param>
    <context-param>
        <description>The folder where are stored the exported pdfs</description>
        <param-name>pdfFolder</param-name>
        <param-value>pdfs</param-value>
    </context-param>
    <context-param>
        <param-name>smtp-hostname</param-name>
        <param-value>smtp.gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>smtp-port</param-name>
        <param-value>465</param-value>
    </context-param>
    <context-param>
        <param-name>smtp-username</param-name>
        <param-value>rewqasdfcxz11@gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>smtp-password</param-name>
        <param-value>rewqasdfcxz112</param-value>
    </context-param>
    <!-- Filtri: mapping filtri-classi -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>it.unitn.web.centodiciotto.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/restricted/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <!-- Listener -->
    <listener>
        <description>ServletContextListener</description>
        <listener-class>it.unitn.web.centodiciotto.listeners.WebAppContextListener</listener-class>
    </listener>

    <!-- Servlet: mapping nome-pading jsp -->
    <servlet>
        <servlet-name>LoginPage</servlet-name>
        <jsp-file>/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>UserPage</servlet-name>
        <jsp-file>/jsp/user.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Cookies</servlet-name>
        <jsp-file>/jsp/cookies.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Privacy</servlet-name>
        <jsp-file>/jsp/privacy.jsp</jsp-file>
    </servlet>
    <!-- Patient -->
    <servlet>
        <servlet-name>ExamHistory</servlet-name>
        <jsp-file>/jsp/patient/exam_history.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>BookYourExam</servlet-name>
        <jsp-file>/jsp/patient/book_your_exam.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Visits</servlet-name>
        <jsp-file>/jsp/patient/visits.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>PhotoGallery</servlet-name>
        <jsp-file>/jsp/patient/photo_gallery.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Tickets</servlet-name>
        <jsp-file>/jsp/patient/tickets.jsp</jsp-file>
    </servlet>
    <!-- General practitioner -->
    <servlet>
        <servlet-name>MyPatientsPractitioner</servlet-name>
        <jsp-file>/jsp/general_practitioner/patients.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>VisitsPractitioner</servlet-name>
        <jsp-file>/jsp/general_practitioner/visits.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>PrescriptionsPractitioner</servlet-name>
        <jsp-file>/jsp/general_practitioner/prescriptions.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>VisitsHistoryPractitioner</servlet-name>
        <jsp-file>/jsp/general_practitioner/visit_history.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>VisitsCalendarPractitioner</servlet-name>
        <jsp-file>/jsp/general_practitioner/visit_calendar.jsp</jsp-file>
    </servlet>
    <!-- Specialized doctor -->
    <servlet>
        <servlet-name>ExamsRequestSpecializedDoctor</servlet-name>
        <jsp-file>/jsp/specialized_doctor/exam_request.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ExamsHistorySpecializedDoctor</servlet-name>
        <jsp-file>/jsp/specialized_doctor/exam_history.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>ExamsCalendarSpecializedDoctor</servlet-name>
        <jsp-file>/jsp/specialized_doctor/exam_calendar.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>MyPatientsSpecializedDoctor</servlet-name>
        <jsp-file>/jsp/specialized_doctor/patients-sd.jsp</jsp-file>
    </servlet>
    <!-- Health Service -->
    <servlet>
        <servlet-name>PrescriptionsHealthService</servlet-name>
        <jsp-file>/jsp/health_service/prescriptions-hs.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>PatientsHealthService</servlet-name>
        <jsp-file>/jsp/health_service/patients-hs.jsp</jsp-file>
    </servlet>
    <!-- Mapping dei servlet alle classi effettive -->
    <servlet>
        <servlet-name>PhotoUploadServlet</servlet-name>
        <servlet-class>it.unitn.web.centodiciotto.servlets.PhotoUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordChangeServlet</servlet-name>
        <servlet-class>it.unitn.web.centodiciotto.servlets.PasswordChangeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PasswordResetServlet</servlet-name>
        <servlet-class>it.unitn.web.centodiciotto.servlets.PasswordResetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FinalizePasswordResetServlet</servlet-name>
        <servlet-class>it.unitn.web.centodiciotto.servlets.FinalizePasswordResetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>it.unitn.web.centodiciotto.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>it.unitn.web.centodiciotto.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UnhappyPractitioner</servlet-name>
        <servlet-class>it.unitn.web.centodiciotto.servlets.ChangePractitionerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Prescriptions</servlet-name>
        <servlet-class>it.unitn.web.centodiciotto.servlets.PrescriptionServlet</servlet-class>
    </servlet>
    <!-- Mapping dei servlet, da nome a effettivo url. -->
    <!-- Pagine accessibili a tutti -->
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cookies</servlet-name>
        <url-pattern>/cookies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Privacy</servlet-name>
        <url-pattern>/privacy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordResetServlet</servlet-name>
        <url-pattern>/password_reset_handler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FinalizePasswordResetServlet</servlet-name>
        <url-pattern>/finalize_password_reset</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login_handler</url-pattern>
    </servlet-mapping>
    <!-- Pagine restricted, comuni a tutti i ruoli -->
    <servlet-mapping>
        <servlet-name>UserPage</servlet-name>
        <url-pattern>/restricted/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PasswordChangeServlet</servlet-name>
        <url-pattern>/restricted/password_change_handler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PhotoUploadServlet</servlet-name>
        <url-pattern>/restricted/photo_upload_handler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/restricted/logout_handler</url-pattern>
