        <servlet-name>ExamsCalendarSpecializedDoctor</servlet-name>
        <url-pattern>/restricted/specialized_doctor/exam_calendar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyPatientsSpecializedDoctor</servlet-name>
        <url-pattern>/restricted/specialized_doctor/patients</url-pattern>
    </servlet-mapping>
    <!-- Health Service -->
    <servlet-mapping>
        <servlet-name>PrescriptionsHealthService</servlet-name>
        <url-pattern>/restricted/health_service/prescriptions-hs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PatientsHealthService</servlet-name>
        <url-pattern>/restricted/health_service/patients-hs</url-pattern>
    </servlet-mapping>
    <!-- Config aggiuntive e pagine di errore -->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>500</error-code>
        <location>/jsp/errors/500.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/jsp/errors/403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/errors/404.jsp</location>
    </error-page>

    <!-- Blocco l'accesso diretto alle jsp -->
    <security-constraint>
        <display-name>JSP direct access block</display-name>
        <web-resource-collection>
            <web-resource-name>JSP</web-resource-name>
            <url-pattern>/jsp/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>No direct access</description>
        </auth-constraint>
    </security-constraint>
</web-app>
