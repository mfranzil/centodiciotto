    <servlet-mapping>
        <servlet-name>MyPatientsPractitioner</servlet-name>
        <url-pattern>/restricted/general_practitioner/patients</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VisitsPractitioner</servlet-name>
